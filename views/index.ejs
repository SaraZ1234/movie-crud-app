<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRUD Movie Table</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f0f2f5;
        padding: 30px;
        color: #333;
      }

      .add-btn {
        background-color: #007bff;
        color: #fff;
        padding: 12px 20px;
        border-radius: 6px;
        display: inline-block;
        margin-bottom: 20px;
        font-size: 16px;
        text-decoration: none;
        transition: background-color 0.3s ease;
      }

      .add-btn:hover {
        background-color: #0056b3;
      }

      .add-btn i {
        margin-right: 8px;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
      }

      th,
      td {
        padding: 14px 16px;
        text-align: left;
        border-bottom: 1px solid #e0e0e0;
      }

      th {
        background-color: #f7faff;
        font-weight: bold;
        color: #444;
      }

      tr:hover {
        background-color: #f9f9f9;
      }

      .actions i {
        cursor: pointer;
        font-size: 16px;
        transition: transform 0.2s ease;
      }

      .actions a {
        margin-right: 10px;
        text-decoration: none;
      }

      .actions a:hover i {
        transform: scale(1.1);
      }

      .actions .fa-pencil-alt {
        color: #28a745;
      }

      .actions .fa-trash {
        color: #dc3545;
      }

      /* Optional: Search Form */
      /*
      form.search-form {
        margin-bottom: 20px;
        position: relative;
        width: 250px;
      }

      form.search-form input {
        padding: 10px 10px 10px 35px;
        width: 100%;
        border: 1px solid #ccc;
        border-radius: 5px;
      }

      form.search-form .fa-search {
        position: absolute;
        top: 10px;
        left: 10px;
        color: #007bff;
      }
      */
    </style>
  </head>

  <body>
    <a href="/host/add_movie" class="add-btn">
      <i class="fa fa-plus-circle"></i> Add Movie
    </a>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Director</th>
          <th>IMDB</th>
          <th>Rating</th>
          <th>Title</th>
          <th>Year</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (movies && movies.length > 0) { %>
        <% movies.forEach((movie, index) => { %>
        <tr>
          <td><%= movie.id %></td>
          <td><%= movie.director %></td>
          <td><%= movie.imdb %></td>
          <td><%= movie.rating %></td>
          <td><%= movie.title %></td>
          <td><%= movie.year %></td>
          <td class="actions">
            <a href="/host/<%= movie.id %>?action=update" title="Edit">
              <i class="fa fa-pencil-alt"></i>
            </a>
            <a href="/host/<%= movie.id %>?action=delete" title="Delete">
              <i class="fa fa-trash"></i>
            </a>
          </td>
        </tr>
        <% }) %>
        <% } else { %>
        <tr>
          <td colspan="7" style="text-align: center; color: #888;">
            No movies found.
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
